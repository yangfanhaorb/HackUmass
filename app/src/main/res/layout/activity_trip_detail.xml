<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.amherst.fyang17.carpool.TripDetail"
    android:background="@color/android_robot">

    <TextView android:text="I don't know what to display"
        android:textColor="@color/ebonics_444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="20dp"
        android:layout_below="@+id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />
    <TextView
        android:textColor="@color/ebonics_444"
        android:textSize="20dp"
        android:text="I don't know what to display2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trip"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />
    <TextView
        android:textColor="@color/ebonics_444"
        android:textSize="12dp"
        android:text="I don't know what to display3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:textColor="@color/ebonics_444"
        android:textSize="15dp"
        android:text="I don't know what to display4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seats"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a Seat"
        android:id="@+id/button3"
        android:layout_below="@+id/seats"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

</RelativeLayout>